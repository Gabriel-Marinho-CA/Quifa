{% assign main = section.settings %}
{% style %}
    .section-{{ section.id }}-padding {
        padding-top: {{ main.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ main.padding_bottom | times: 0.75 | round: 0 }}px;
      }

      @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
          padding-top: {{ main.padding_top }}px;
          padding-bottom: {{ main.padding_bottom }}px;
        }
      }
      .section-{{ section.id }} {
      background:{{ main.background_section_color }};
      position:relative;

      & .wrapper-title{
        display:flex;
        justify-content: space-between;
        gap:1rem;
        align-items:center;

        @media (max-width:750px) {
            flex-wrap: wrap;
            justify-content: center;
            gap: 2rem;
        }
      }
      & .subtitle-section * {
        font-size:18px;
        line-height:1;
        color: {{ section.settings.color_subtitle }};

        @media (max-width:547px) {
          font-size:14px;
        }
      }
      & .title-section *:not(a){
          color: {{ main.title_section_color }};
          margin:0;
          font-size: 24px;
          font-weight: 600;
          line-height: 1.1;
          text-align: center;
          text-transform:uppercase;
      }

      & .wrapper-title a {
        font-size: 18px;
        font-weight: 500;
        line-height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        width:181px;
        height:56px;
        background-color: {{ section.settings.btn_color_bg}};
        color: {{ section.settings.btn_color_text}};
        border-radius: 300px;
        text-decoration: none;
      }

  }
{% endstyle %}
<div
  {% if main.id_section %}
    id="{{ main.id_section |  handleize}}"
  {% endif %}

  class="section-{{ section.id }}-padding section-{{ section.id }}"
>
  <div class="page-width">
    <div class="wrapper-title">
      <div class="left">
        <div class="title-section">
          {{ main.title }}
        </div>
        <div class="subtitle-section">
          {{ main.subtitle }}
        </div>
      </div>
      <div class="right">
        <a class="insta-btn" href="{{ main.instagram_link }}" target="_blank">{{ main.instagram_title }}</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Instagram by turbo",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "id_section",
      "label": "Id da seção"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Título"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtítulo"
    },
    {
      "type": "text",
      "id": "instagram_title",
      "label": "Texto Instagram"
    },
    {
      "type": "url",
      "id": "instagram_link",
      "label": "Link Instagram"
    },
    {
      "type": "header",
      "content": "Cores"
    },
    {
      "type": "color",
      "id": "title_section_color",
      "label": "Cor do título da seção",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "color_subtitle",
      "label": "Cor do subtítulo da seção",
      "default": "#434752"
    },
    {
      "type": "color",
      "id": "btn_color_bg",
      "label": "Cor do background do botão ",
      "default": "#111C30"
    },
    {
      "type": "color",
      "id": "btn_color_text",
      "label": "Cor do texto do botão ",
      "default": "#fff"
    },
    {
      "type": "header",
      "content": "Espaçamento"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Instagram section by turbo"
    }
  ]
}
{% endschema %}
