{% style %}
    .deals-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .deals-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}
<style>
    .deals-bar-fixed.deals-{{ section.id }} {
      width: 100%;
      background-color: {{ section.settings.bg_color }};

      * {
        color: {{ section.settings.text_color }};
        text-transform:uppercase;
      }

      .title-sec {
        * {
          color: #fff;
          font-weight: 500;
          font-size: 32px;
          line-height: 1.1;
          letter-spacing: 0.64px;
          text-transform: uppercase;
          text-align: center;
          margin:0;
          @media (max-width:547px) {
          font-weight: 500;
          font-size: 20px;
          letter-spacing: 0.64px;
          text-transform: uppercase;
          }
        }
      }
      .subtitle-sec {
        p {
          color:#fff;
          opacity:.64;
          font-weight: 400;
          font-size: 20px;
          line-height: 1.4;
          text-align: center;
          margin:1rem 0 1.3rem 0;

          @media (max-width:547px) {
            font-size: 14px;
          }
        }
      }
      @media (max-width: 799px) {

        &.mobile {
          ul {
            overflow-x: scroll;
            -webkit-overflow-scrolling: touch;
            -webkit-overflow-scrolling: auto;
            padding: 0 0 1rem 0;

            li {
              min-width: fit-content;
            }
          }
        }
      }

      ul {
        list-style: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 64px;

        @media (max-width:950px) {
          display: grid;
          grid-template-columns: repeat(2,auto);
          row-gap: 2rem;
          column-gap: 2rem;
          padding: 0;

          img {
            max-width: 32px;
            height: auto;
            width: 100%;
          }
        }

        @media (max-width:360px) {
          img {
            max-width:25px
          }
        }

        * {
          margin: 0;
          line-height: 1;
        }

        li {
          display: flex;
          align-items: center;
          gap: 1rem;

          @media (max-width:950px) {
            justify-content: center;
          }
          .title-card {
            * {
              font-size: 20px;
              font-weight: 600;
              letter-spacing: 0.2px;

              @media (max-width:950px) {
                font-size: 15px;
              }
              @media (max-width:360px) {
                font-size: 13px;
              }
            }
          }
          .subtitle-card {
            * {
              font-weight: 300;
              font-size: 18px;

              @media (max-width:950px) {
                font-size: 13px;
              }
              @media (max-width:360px) {
                /* font-size: 12px; */
              }
            }
          }
        }
      }
    }
</style>

<div
  class="deals-bar-fixed deals-{{ section.id }} deals-{{ section.id }}-padding desktop {% if section.settings.deal_bar_active_mobile %}mobile{% endif %}{% if section.settings.deal_bar_sticky_mobile %} sticky-mobile{% endif %}"
  {% if section.settings.deal_bar_active %}
    data-sticky="true"
  {% endif %}
>
  <div class="page-width">
    {% if section.settings.title_sec != blank %}
      <div class="title-sec">
        {{ section.settings.title_sec }}
      </div>
    {% endif %}

    {% if section.settings.subtitle_sec != blank %}
      <div class="subtitle-sec">
        <p>
          {{ section.settings.subtitle_sec }}
        </p>
      </div>
    {% endif %}

    <div class="wrapper-deals">
      <ul>
        {% for block in section.blocks %}
          {% case block.type %}
            {%- when '@app' -%}
              {% render block %}
            {% when 'deal' %}
              <li>
                {% if block.settings.img != blank %}
                  {{ block.settings.img | image_url: width: 40, height: 40 | image_tag }}
                {% endif %}

                <div class="right-card">
                  <div class="title-card">
                    {{ block.settings.title }}
                  </div>
                  <div class="subtitle-card">
                    {{ block.settings.subtitle }}
                  </div>
                </div>
              </li>
            {% else %}

          {% endcase %}
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Ofertas info by turbo",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },

  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "default": "#013F56",
      "label": "Cor background"
    },
    {
      "type": "richtext",
      "id": "title_sec",
      "label": "Titulo da seção"
    },
    {
      "type": "text",
      "id": "subtitle_sec",
      "label": "Titulo da seção"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#fff",
      "label": "Cor dos textos"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "deal",
      "name": "Card Oferta",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Imagem Oferta"
        },
        {
          "type": "richtext",
          "id": "title",
          "label": "Titulo Oferta"
        },
        {
          "type": "richtext",
          "id": "subtitle",
          "label": "Subtitulo Oferta"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Barra de Ofertas"
    }
  ]
}
{% endschema %}
