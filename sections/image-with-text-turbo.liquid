{% style %}
    .image-with-text-turbo-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.55 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .image-with-text-turbo-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<style>
  .image-with-text-turbo {
    background: {{ section.settings.bg_wrapper_content }};

  .section-wrapper {
        background: url("{{ section.settings.img | img_url: 'master' }}");
        background-size: contain;
        background-repeat: no-repeat;

        &.right-bg {
            background-position: right;
        }

        @media (max-width:1000px) {
            background: url(" {{ section.settings.img_mobile | img_url: 'master' }}");
        }
    }

  .wrapper {
    display: flex;
    align-items: center;
    flex-direction: {{ section.settings.box_align}};

    .right {
        min-height: {{ section.settings.img.height }}px;

        @media (max-width:1000px) {
            min-height: {{ section.settings.img_mobile.height }}px;
        }
    }
  }

    .desktop,
    .mobile {
      display: none;
    }

    .title-banner {
      margin-bottom: 7rem;
      @media (max-width:999px) {
        margin-bottom: 4rem;
      }
      * {
          text-align: center;
          color: {{ section.settings.color_title }};
          font-size: 32px;
          line-height: 1.5;
          margin: 0;

          @media (max-width:999px) {
            font-size: 17px;
          }

          strong {
              font-weight:600;
          }
      }
  }

    @media (min-width:1000px) {
      .desktop {
        display:block !important;
      }
    }
    @media (max-width:999px) {
      .mobile {
        display:block !important;
      }
    }

    .title-banner {
      margin-bottom: 7rem;
      @media (max-width:999px) {
        margin-bottom: 4rem;
      }
      * {
          text-align: center;
          color: {{ section.settings.color_title }};
          font-size: 32px;
          line-height: 1.5;
          margin: 0;

          @media (max-width:999px) {
            font-size: 17px;
          }

          strong {
              font-weight:600;
          }
      }
  }



        img  {
            height:auto;
            object-fit:contain;
            width: 100%;
    }
  .wrapper-text {
          * {
              color: {{ section.settings.color_content }};
              margin: 0;
              line-height: 1.5;
          }

          .title-text {
            padding-bottom: 1.5rem;

            * {
               font-size: 28px;
               letter-spacing: 0.28px;
               font-weight: 500;
               text-transform: uppercase;
               line-height: 1.1;

               @media (max-width:999px) {
                font-size: 18px;
               }
           }
          }

          .content-text {
            * {
                opacity: .64;
                font-size: 18px;
                font-weight: 400;
                line-height: 1.5;

                @media (max-width:999px) {
                font-size: 16px;
               }
            }
          }
          .check-button {
            margin-top: 3rem;
            a {
                text-decoration: none;
                font-size:16px;
                font-weight:500;
                background-color: {{ section.settings.btn_bg}};
                color: {{ section.settings.btn_text_color }};
                border-radius:32px;
                height:59px;
                width:100%;
                max-width:232px;
                display:flex;
                justify-content:center;
                align-items:center;
                transition:all .25s ease;

                &:hover {
                  background-color: #061433;
                  color:#fff;
                }

                @media screen and (max-width:999px) {
                  /* max-width: 100%; */
                }
            }
          }
      }
  }
</style>

<div
  class="image-with-text-turbo image-with-text-turbo-{{ section.id }} image-with-text-turbo-{{ section.id }}-padding desktop"
>
  <div class="section-wrapper {% if section.settings.box_align == "row-reverse" %}right-bg{% endif %}">
    <div class="page-width">
      {% if section.settings.title != blank %}
        <div class="title-banner">
          {{ section.settings.title }}
        </div>
      {% endif %}
      <div class="wrapper">
        <div class="left">
          <div class="wrapper-text">
            <div class="title-text">
              {{ section.settings.title_text }}
            </div>
            <div class="content-text">
              {{ section.settings.content_text }}
            </div>
            <div class="check-button">
              <a href="{{ section.settings.link_btn }}">
                {{ section.settings.btn_label }}
              </a>
            </div>
          </div>
        </div>
        <div class="right">
          <div class="desktop">
            {% if section.settings.img != blank %}
              {{
                section.settings.img
                | image_url: width: section.settings.img.width, height: section.settings.img.height
                | image_tag
              }}
            {% endif %}
          </div>
          <div class="mobile">
            {% if section.settings.img_mobile != blank %}
              {{
                section.settings.img_mobile
                | image_url: width: section.settings.img_mobile.width, height: section.settings.img_mobile.height
                | image_tag
              }}
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Banner Texto flutuante",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "image_bg",
      "label": "Imagem como background",
      "default": true
    },
    {
      "type": "color_background",
      "id": "bg_wrapper_content",
      "label": "Cor do background sessão",
      "default": "linear-gradient(50% 50% at 50% 50%, #111C30 0%, #013356 100%)"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Imagem desktop"
    },
    {
      "type": "image_picker",
      "id": "img_mobile",
      "label": "Imagem mobile"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Titulo sessão",
      "default": "<h2>Você sabia que fumantes podem ter<br/><strong>deficiências de vitaminas e minerais</strong>?</h2>"
    },
    {
      "type": "color",
      "id": "color_title",
      "default": "#1E2239",
      "label": "Cor do titulo da sessão"
    },

    {
      "type": "header",
      "content": "Box de conteudo"
    },
    {
      "type": "richtext",
      "id": "title_text",
      "label": "Titulo Box",
      "default": "<h4>O que a ciência nos mostra sobre essa conexão</h4>"
    },
    {
      "type": "richtext",
      "id": "content_text",
      "label": "Titulo Box",
      "default": "<p>Estudos indicam que pessoas que fumam podem ter necessidades nutricionais diferentes.<br/>O cigarro pode influenciar como o corpo absorve e utiliza vitaminas e minerais essenciais.</p>"
    },
    {
      "type": "color",
      "id": "color_content",
      "default": "#fff",
      "label": "Cor do conteudo texto"
    },
    {
      "type": "text",
      "id": "btn_label",
      "default": "Conferir produtos",
      "label": "Label do botão"
    },
    {
      "type": "url",
      "id": "link_btn",
      "label": "Link do botão"
    },
    {
      "type": "color",
      "id": "btn_bg",
      "default": "#fff",
      "label": "Background botão"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Cor label botão",
      "default": "#fff"
    },
    {
      "type": "select",
      "id": "box_align",
      "options": [
        {
          "value": "row",
          "label": "left"
        },
        {
          "value": "row-reverse",
          "label": "right"
        }
      ],
      "default": "row",
      "label": "Selecione a direção da caixa de texto"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Imagem com caixa de texto"
    }
  ]
}
{% endschema %}

